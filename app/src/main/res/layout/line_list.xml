<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFBF1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fond en dégradé -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient"
            android:alpha="0.2"/>

        <TextView
            android:id="@+id/texteTitleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Titre du Film"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/texteReleaseYearId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Année: 2023"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/texteTitleId"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/texteLanguageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌍 Langue: Français"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/texteTitleId"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/texteDureeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Durée: 120 min"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/texteReleaseYearId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
